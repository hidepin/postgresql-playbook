GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="crashkernel={{ (ansible_distribution == "Fedora")|ternary("128M", "auto") }} rhgb quiet ipv6.disable=1"
GRUB_DISABLE_RECOVERY="true"
